extends ../layout

block content
    h1.
        Bike ID #{bike._id}
    form(action='/bikes/#{bike._id}/edit',method='post',name='updatebike',enctype='application/x-www-form-urlencoded')
        p Name: 
            input#inputName(type='text', value='#{bike.name}', name='name')
        p Price: 
            input#inputPrice(type='number', value='#{bike.price}', name='price')
        p Description: 
            input#inputName(type='text', value='#{bike.description}', name='description')
        p DOB: 
            input#inputDob(type='date', value='#{bikedob}', name='dob')
        p Are you Loved?: 
            input#inputIsLoved(type='checkbox', name='isloved', checked=('#{bike.isloved}'==='true' ? "checked" : undefined))
        p 
            input(type='hidden',value='PUT',name='_method')
        p 
            button#btnSubmit(type='submit').
                Update