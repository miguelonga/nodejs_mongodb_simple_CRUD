extends ../layout

block content
    h1.
         #{title}
    ul
        - each bike, i in bikes
            li
                = bike.name
                = bike.price
                = bike.description
                = bike.issold
                = bike._id
                form(action='/bikes/#{bike._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
                    input(type='hidden',value='DELETE',name='_method')
                    button(type='submit').
                        Delete
                p 
                    a(href='/bikes/#{bike._id}/edit') Edit
                p
                    a(href='/bikes/#{bike._id}') Show